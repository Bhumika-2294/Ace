// perfect number is a number which is sum of its all divisors except itself
#include <iostream>
using namespace std;
int main(){
    int num,sum=0;
    cin>>num;
    for(int i=1;i<num;i++){
        if(num%i==0){
           sum+=i;
        }
    }if(sum==num){
        cout<<num<<" is a perfect number.";
    }else{
        cout<<num<<" is not a perfect number.";
    }
    return 0;
}
